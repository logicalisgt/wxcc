# WxCC API Configuration
WXCC_API_BASE_URL=https://api.wxcc-eu2.cisco.com
WXCC_ACCESS_TOKEN=your_access_token_here
WXCC_ORG_ID=your_organization_id_here
WXCC_API_TIMEOUT=30000

# Server Configuration
PORT=3000
NODE_ENV=development

# Enhanced Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
PRETTY_LOGS=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# API Configuration
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Database Configuration (optional, defaults to SQLite file)
# DATABASE_PATH=./wxcc_mappings.db

# Enhanced Logging Features
# Set PRETTY_LOGS=true for colorized console output (default: true in development)
# Set PRETTY_LOGS=false to disable colorized output  
# LOG_FORMAT options: "json" | "pretty"